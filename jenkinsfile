pipeline {
     agent any
     stages {
         stage('Build') {
             steps {
                 sh 'echo "Hello World"'
                 sh "my comment"
                     echo "Multiline shell steps works too"
                     ls -lah
                 '''
             }
         }
         stage('Lint HTML') {
              steps {
                  sh 'tidy -q -e *.html'
              }
         }
         stage('Push image') {
              steps { 
                 docker push imageName: 'demolocal:latest', notCompleted: 'exit 1', onDisallowed: 'fail'
              }
         }         
         stage('set current kubectl context') {
              steps {
                  kubectl config current-context
              }
         }
         stage('Deploy container') {
              steps {
                  docker run -p 8000:80 demolocal
              }
         }
     }
}

